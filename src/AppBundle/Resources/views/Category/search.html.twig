{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Category Search</h1>
    {% if categories|length %}
        <p class="count">
            Displaying {{ categories|length }} categories of {{ categories.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('admin_category_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

    {% if categories|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Label</th>
                    <th>Description</th>
                    <th>Count</th>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            <a href="{{ path('admin_category_show', { 'id': category.id }) }}">
                                {{ category.label }}
                            </a>
                        </td>
                        <td>{{ category.description }}</td>
                        <td>
                            {{ category.publications|length }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(categories) }}
        </div>
    {% endif %}

{% endblock %}
