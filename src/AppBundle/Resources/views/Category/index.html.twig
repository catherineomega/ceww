{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Category List</h1>
    <p class="count">
        Displaying {{ categories|length }} categories of {{ categories.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('admin_category_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Label</th>
                <th>Description</th>
                <th>Count</th>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        <a href="{{ path('admin_category_show', { 'id': category.id }) }}">
                            {{ category.label }}
                        </a>
                    </td>
                    <td>{{ category.description }}</td>
                    <td>
                        {{ category.publications|length }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}
