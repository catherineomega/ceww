{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Publication Search</h1>
	{% if publications|length %}
		<p class="count">
			Displaying {{ publications|length }} publications of {{ publications.getTotalItemCount }} total.
		</p>
	{% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('admin_publication_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

	{% if publications|length %}
		<table class="table table-bordered table-condensed table-hover table-striped">
			<thead>
				<tr>
                                    <th>Category</th>
					<th>Title</th>
					<th>Authors</th>
					<th>Year</th>
				</tr>
			</thead>
			<tbody>
			{% for publication in publications %}
				<tr>
                                    <td>{{ publication.category }}</td>
					<td>
						<a href="{{ path('admin_publication_show', { 'id': publication.id }) }}">
							{{ publication.title }}
						</a>
					</td>
					<td>{{ publication.authors|length }}</td>
					<td>{{ publication.year }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>

		<div class="navigation">
			{{ knp_pagination_render(publications) }}
		</div>
	{% endif %}

{% endblock %}
