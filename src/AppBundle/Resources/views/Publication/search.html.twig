{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Publication Search</h1>
    {% if q %}
        <p class="count">
            Displaying {{ publications|length }} publications of {{ publications.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('publication_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
                <p class="help-block col-sm-offset-2">Boolean, full text, search any metadata field for the term.</p>
            </div>
        </fieldset>
    </form>

    {% if q %}

        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Created</th>
                    <th>Updated</th>
                </tr>
            </thead>
            <tbody>
                {% for publication in publications %}
                    <tr>
                        <td>
                            <a href="{{ path('publication_show', { 'id': publication.id }) }}">
                                {{ publication.title }}
                            </a>
                        </td>
                        <td>{{ publication.dateYear }}</td>
                        <td>
                            {% if publication.location %}
                                <a href="{{ path('place_show', {'id': publication.location.id}) }}">
                                    {{ publication.location }}
                                </a>
                            {% endif %}
                        </td>
                        <td>{% if publication.created %}{{ publication.created|date }}{% endif %}</td>
                        <td>{% if publication.updated %}{{ publication.updated|date }}{% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(publications) }}
        </div>
    {% endif %}

{% endblock %}
