{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Publication List</h1>
    <p class="count">
        Displaying {{ publications|length }} publications of {{ publications.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('admin_publication_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Notes</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>
                    <a href="{{ path('admin_publication_show', { 'id': publication.id }) }}">
                        {{ publication.title }}
                    </a>
                </td>
                <td>{{ publication.year }}</td>
                <td>{{ publication.notes }}</td>
                <td>{% if publication.created %}{{ publication.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if publication.updated %}{{ publication.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(publications) }}
    </div>

{% endblock %}
