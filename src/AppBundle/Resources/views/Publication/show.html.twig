{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Publication</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('publication_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('publication_edit', { 'id': publication.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('publication_delete', { 'id': publication.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Publication?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ publication.title }}</td>
            </tr>
            <tr>
                <th>Sortabletitle</th>
                <td>{{ publication.sortableTitle }}</td>
            </tr>
            <tr>
                <th>Links</th>
                <td>{% if publication.links %}{{ publication.links|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ publication.notes }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if publication.created %}{{ publication.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if publication.updated %}{{ publication.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
