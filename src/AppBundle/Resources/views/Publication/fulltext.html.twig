{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Publication Search</h1>
    {% if publications|length %}
        <p class="count">
            Displaying {{ publications|length }} publications of {{ publications.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('admin_publication_fulltext') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <p>	Full text searching options:</p>
            <ul>
                <li><code>shakespeare</code> - shakespeare should be present, but might not be</li>
                <li><code>shakes*</code> - words starting with shakes should be present</li>
                <li><code>+agnes</code> - agnes must be present</li>
                <li><code>-fisher</code> - fisher must not be present</li>
                <li>Combinations are OK: <code>+agnes -fisher</code> finds Anges who isn't a Fisher</li>
                <li>Phrases are OK: <code>"nee agnes"</code> finds rows that contain the literal phrase.
            </ul>
        </fieldset>
    </form>

    {% if publications|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Year</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                {% for result in publications %}
                    {% set publication = result[0] %}
                    <tr>
                        <td>{{ publication.category }}</td>
                        <td>
                            <a href="{{ path('admin_publication_show', { 'id': publication.id }) }}">
                                {{ publication.title }}
                            </a>
                        </td>
                        <td>{{ publication.year }}</td>
                        <td>{{ publication.notes }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(publications) }}
        </div>
    {% endif %}

{% endblock %}
