<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    {% embed 'AppBundle:Person:partial/link.html.twig' %}
                    {% endembed %}
                </td>                
                <td>{{ person.description }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
