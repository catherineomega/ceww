{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Person List</h1>
    {% if q %}
        <p class="count">
            Displaying {{ people|length }} people of {{ people.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('person_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
                <p class="help-block col-sm-offset-2">Boolean, full text, search any metadata field for the term.</p>
            </div>
        </fieldset>
    </form>
                  
    {% if q %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Fullname</th>
                <td>Born</td>
                <td>Died</td>
            </tr>
        </thead>
        <tbody>
            {% for person in people %}
                <tr>
                    <td>
                        <a href="{{ path('person_show', { 'id': person.id }) }}">
                            {{ person.fullName }}
                        </a>
                    </td>
                    <td>{{ person.birthDate }} 
                        {% if person.birthPlace %}
                            <a href="{{ path('place_show', {'id': person.birthPlace.id}) }}">
                                {{ person.birthPlace }}
                            </a>
                        {% endif %}
                    </td>
                    <td>{{ person.deathDate }} 
                        {% if person.deathPlace %}
                            <a href="{{ path('place_show', {'id': person.deathPlace.id}) }}">
                                {{ person.deathPlace }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(people) }}
    </div>
    
    {% endif %}

{% endblock %}
