{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Person</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('person_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('person_edit', { 'id': person.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('person_delete', { 'id': person.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Person?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Fullname</th>
                <td>{{ person.fullName }}</td>
            </tr>
            <tr>
                <th>Also known as</th>
                <td>
                    {% set aliases = person.aliases %}
                    {% if aliases|length > 0 %}
                        <ul>
                            {% for alias in aliases %}
                                <li>
                                    <a href="{{ path('alias_show', {'id': alias.id}) }}">
                                        {{ alias }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}            
                <tr>
                    <th>Sortablename</th>
                    <td>{{ person.sortableName }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Description</th>
                <td>{{ person.description }}</td>
            </tr>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <tr>
                    <th>Notes</th>
                    <td>{{ person.notes }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Birth</th>
                <td>{{ person.birthDate }} 
                    <a href="{{ path('place_show', {'id': person.birthPlace.id}) }}">
                        {{ person.birthPlace }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Death</th>
                <td>{{ person.deathDate }} 
                    <a href="{{ path('place_show', {'id': person.deathPlace.id}) }}">
                        {{ person.deathPlace }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if person.created %}{{ person.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if person.updated %}{{ person.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% set contributions = person.contributions %}
    {% if contributions|length > 0 %}
        <h2>Publications</h2>
        <ul>
            {% for contribution in contributions %}
                <li>
                    <a href="{{ path('publication_show', {'id': contribution.publication.id}) }}">
                        {{ contribution.publication}}
                    </a>
                    ({{ contribution.role }})
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% set residences = person.residences %}
    {% if residences|length > 0 %}
        <h2>Residences</h2>
        <ul>
            {% for residence in residences %}
                <li>
                    <a href="{{ path('place_show', {'id': residence.id }) }}">
                        {{ residence }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    
    {% include 'NinesFeedbackBundle:Comment:comment-interface.html.twig' with { 'entity': person } %}				

{% endblock %}
