{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Place Search</h1>
    {% if places|length %}
        <p class="count">
            Displaying {{ places|length }} places of {{ places.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('place_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

    {% if places|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Alternatenames</th>
                    <th>Countryname</th>
                    <th>Adminnames</th>
                    <th>B/D/R</th>
                </tr>
            </thead>
            <tbody>
                {% for place in places %}
                    <tr>
                        <td>
                            <a href="{{ path('place_show', { 'id': place.id }) }}">
                                {{ place.name }}
                            </a>
                        </td>
                        <td>{% if place.alternateNames %}{{ place.alternateNames|join(', ') }}{% endif %}</td>
                        <td>{{ place.countryName }}</td>
                        <td>{% if place.adminNames %}{{ place.adminNames|join(', ') }}{% endif %}</td>
                        <td>{{ place.authorsBorn|length }}\{{ place.authorsDied|length }}\{{ place.residents|length }}</td>
                    </tr>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(places) }}
        </div>
    {% endif %}

{% endblock %}
