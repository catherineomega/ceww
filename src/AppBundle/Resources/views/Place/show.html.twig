{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Place</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('place_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('place_delete', { 'id': place.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Place?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ place.name }}</td>
            </tr>
            <tr>
                <th>Alternatenames</th>
                <td>{% if place.alternateNames %}{{ place.alternateNames|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Countryname</th>
                <td>{{ place.countryName }}</td>
            </tr>
            <tr>
                <th>Adminnames</th>
                <td>{% if place.adminNames %}{{ place.adminNames|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ place.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ place.longitude }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ place.description }}</td>
            </tr>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}            
                <tr>
                    <th>Notes</th>
                    <td>{{ place.notes }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Created</th>
                <td>{% if place.created %}{{ place.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if place.updated %}{{ place.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% set people = place.peopleBorn %}
    {% if people|length > 0 %}
        <h2>Births</h2>
        <ul>
            {% for person in people %}
                <li>
                    {{ person.birthDate }} 
                    <a href="{{ path('person_show', {'id': person.id}) }}">
                        {{ person }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% set people = place.peopleDied %}
    {% if people|length > 0 %}
        <h2>Deaths</h2>
        <ul>
            {% for person in people %}
                <li>
                    {{ person.deathDate }} 
                    <a href="{{ path('person_show', {'id': person.id}) }}">
                        {{ person }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% set people = place.residents %}
    {% if people|length > 0 %}
        <h2>Residents</h2>
        <ul>
            {% for person in people %}
                <li>
                    <a href="{{ path('person_show', {'id': person.id}) }}">
                        {{ person }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% set publications = place.publications %}
    {% if publications|length > 0 %}
        <h2>Publications</h2>
        <ul>
            {% for publication in publications %}
                <li>
                    <a href="{{ path('publication_show', {'id': publication.id}) }}">
                        {{ publication }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% include 'NinesFeedbackBundle:Comment:comment-interface.html.twig' with { 'entity': place } %}				
    
{% endblock %}
