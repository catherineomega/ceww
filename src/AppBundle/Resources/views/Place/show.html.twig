{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Place</h1>
 {% endblock %} 

{% macro pubList(title, list, pathname) %}
	{% if list|length %}
		<h2>{{ title }}</h2>
		<ul class='columnated'>
			{% for p in list %}
				<li>
					<a href='{{ path(pathname, {'id': p.id }) }}'>
						{{ p }}
					</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
{% endmacro %}
{% import _self as self %}

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('admin_place_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('admin_place_edit', { 'id': place.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('admin_place_delete', { 'id': place.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Place?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
            <td>{{ place.name }}</td>
            </tr>
            <tr>
                <th>Alternatenames</th>
                <td>{% if place.alternateNames %}{{ place.alternateNames|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Countryname</th>
            <td>{{ place.countryName }}</td>
            </tr>
            <tr>
                <th>Adminnames</th>
                <td>{% if place.adminNames %}{{ place.adminNames|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
				<th>Authors born</th>
				<td>{{ place.authorsBorn|length }}</td>
			</tr>
			<tr>
				<th>Authors died</th>
				<td>{{ place.authorsDied|length }}</td>
			</tr>
			<tr>
				<th>Authors in residence</th>
				<td>{{ place.residents|length }}</td>
			</tr>
            <tr>
                <th>Latitude</th>
            <td>{{ place.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
            <td>{{ place.longitude }}</td>
            </tr>
            <tr>
                <th>Description</th>
            <td>{{ place.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if place.created %}{{ place.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if place.updated %}{{ place.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#born" aria-controls="home" role="tab" data-toggle="tab">Born</a></li>
    <li role="presentation"><a href="#died" aria-controls="profile" role="tab" data-toggle="tab">Died</a></li>
    <li role="presentation"><a href="#resident" aria-controls="messages" role="tab" data-toggle="tab">Resident</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
	  <div role="tabpanel" class="tab-pane active" id="born">
		  {{ self.pubList('Authors Born', place.authorsBorn, 'admin_author_show') }}
	  </div>
	  <div role="tabpanel" class="tab-pane" id="died">
		  {{ self.pubList('Authors Died', place.authorsDied, 'admin_author_show') }}
	  </div>
	  <div role="tabpanel" class="tab-pane" id="resident">
		  {{ self.pubList('Authors Resident', place.residents, 'admin_author_show') }}
	  </div>
  </div>

</div>				
				
{% endblock %}
