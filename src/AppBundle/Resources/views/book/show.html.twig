{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block pageheader %} 
    <h1>{{ book.title }}</h1>
    {% embed 'AppBundle:publication:partial/browse.html.twig' %}
    {% endembed %}
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('book_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <a href="{{ path('book_edit', { 'id': book.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                {% if is_granted('ROLE_CONTENT_ADMIN') %}
                    <a href="{{ path('book_delete', { 'id': book.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Book?">
                        <span class='glyphicon glyphicon-remove'></span> Delete
                    </a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Full title of the work" data-trigger="hover" data-placement="bottom">Title</a></th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Year work published" data-trigger="hover" data-placement="bottom">Date</a></th>
                <td>{{ book.dateYear }}</td>
            </tr>
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Place of publication" data-trigger="hover" data-placement="bottom">Location</a></th>
                <td>{{ book.location }}</td>
            </tr>
            {% if is_granted('ROLE_USER') %}
                <tr>
                    <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Name for sorting. Not visible to public." data-trigger="hover" data-placement="bottom">Sortable Title</a></th>
                    <td>{{ book.sortableTitle }}</td>
                </tr>
            {% endif %}
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="URL link to specified publication" data-trigger="hover" data-placement="bottom">Links</a></th>
                <td>
                    {% if book.links | length > 0 %}
                        <ul>
                            {% for link in book.links %}                        
                                <li>
                                    <a href="{{ link }}">{{ link }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Notes about the entry" data-trigger="hover" data-placement="bottom">Notes</a></th>
                <td>{{ book.description|raw }}</td>
            </tr> 
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Category of the work" data-trigger="hover" data-placement="bottom">Genres</a></th>
                <td>
                    {% if book.genres | length > 0 %}
                        <ul>
                            {% for genre in book.genres %}
                                <li>
                                    <a href="{{ path('genre_show', {'id': genre.id}) }}">
                                        {{ genre }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>

            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <tr>
                    <th><a href="#" onClick="return false;" data-toggle="popover" data-content="These notes are only available to logged-in users" data-trigger="hover" data-placement="bottom">Research Notes</a></th>
                    <td>{{ book.notes|raw }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    {% if book.contributions | length > 0 %}    
        <h2>Contributors</h2>
        <ul>
            {% for contribution in book.contributions %}
                <li>
                    {% if contribution.role.name != 'author' %}
                        <i>{{ contribution.role }}</i>, 
                    {% endif %}
                    {% embed 'AppBundle:person:partial/link.html.twig' with {'person': contribution.person} %}
                    {% endembed %}
                </li>
            {% endfor %} 
        </ul>
    {% endif %}

    {% include 'NinesFeedbackBundle:comment:comment-interface.html.twig' with { 'entity': book } %}				

{% endblock %}
