{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>PublicationType List</h1>
    <p class="count">
        Displaying {{ publicationTypes|length }} publicationTypes of {{ publicationTypes.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('admin_publication_type_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Label</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for publicationType in publicationTypes %}
            <tr>
                <td>
                    <a href="{{ path('admin_publication_type_show', { 'id': publicationType.id }) }}">
                        {{ publicationType.label }}
                    </a>
                </td>
                <td>{{ publicationType.description }}</td>
                <td>{% if publicationType.created %}{{ publicationType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if publicationType.updated %}{{ publicationType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(publicationTypes) }}
    </div>

{% endblock %}
