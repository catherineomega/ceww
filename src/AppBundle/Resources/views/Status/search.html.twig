{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Status Search</h1>
    {% if statuses|length %}
        <p class="count">
            Displaying {{ statuses|length }} statuses of {{ statuses.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{ path('admin_status_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

    {% if statuses|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Label</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th>Updated</th>            </tr>
            </thead>
            <tbody>
                {% for status in statuses %}
                    <tr>
                        <td>
                            <a href="{{ path('admin_status_show', { 'id': status.id }) }}">
                                {{ status.label }}
                            </a>
                        </td>
                        <td>{{ status.description }}</td>
                        <td>{% if status.created %}{{ status.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if status.updated %}{{ status.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(statuses) }}
        </div>
    {% endif %}

{% endblock %}
