{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Status</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
		<div class="btn-group pull-right">
			<a href="{{ path('admin_status_index') }}" class="btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Back
			</a>
			<a href="{{ path('admin_status_edit', { 'id': status.id }) }}" class="btn btn-default">
				<span class='glyphicon glyphicon-edit'></span> Edit
			</a>
			<a href="{{ path('admin_status_delete', { 'id': status.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Status?">
				<span class='glyphicon glyphicon-remove'></span> Delete
			</a>
		</div>
	</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Label</th>
				<td>{{ status.label }}</td>
            </tr>
			<tr>
				<th>Public</th>
				<td>{% if status.public %}Yes{% else %}No{% endif %}
			</tr>
            <tr>
                <th>Description</th>
				<td>{{ status.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if status.created %}{{ status.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if status.updated %}{{ status.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
