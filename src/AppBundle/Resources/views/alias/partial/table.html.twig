{% if aliases.items == null and aliases.currentPageNumber == 1 %}
    <p>No results for this query</p>
{% elseif aliases.items == null and aliases.currentPageNumber > 1 %}
    <p>No results for this page</p>
{% else %}
<p class="count">Displaying {{ aliases.items|length }} alternate name results of {{ aliases.getTotalItemCount }} total.</p>
<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr><th>Name</th><th>Used by</th></tr>
    </thead>
    <tbody>
        {% for alias in aliases %}
            <tr>
                <td>
                    <a href="{{ path('alias_show', { 'id': alias.id }) }}">
                        {{ alias.name }}
                    </a>
                </td>
                <td>
                    {% set person = alias.people.first() %}
                    {% if person %}
                    {% include 'AppBundle:person:partial/link.html.twig' %}
                    {% endif %}
                    {% if alias.people | length > 1 %}
                        and {{ alias.people | length }} more.
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endif %}
