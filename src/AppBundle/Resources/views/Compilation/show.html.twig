{% extends 'base.html.twig' %}

{% block title %}{{ compilation.title }}{% endblock %}

{% block pageheader %} 
    <h1>{{ compilation.title }}</h1>
    {% embed 'AppBundle:Publication:partial/browse.html.twig' %}
    {% endembed %}
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('compilation_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <a href="{{ path('compilation_edit', { 'id': compilation.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                {% if is_granted('ROLE_CONTENT_ADMIN') %}
                    <a href="{{ path('compilation_delete', { 'id': compilation.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Collection?">
                        <span class='glyphicon glyphicon-remove'></span> Delete
                    </a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ compilation.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ compilation.dateYear }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ compilation.location }}</td>
            </tr>
            <tr>
                <th>Sortable Title</th>
                <td>{{ compilation.sortableTitle }}</td>
            </tr><tr>
                <th>Links</th>
                <td>
                    {% if compilation.links | length > 0 %}
                        <ul>
                            {% for link in compilation.links %}                        
                                <li>
                                    <a href="{{ link }}">{{ link }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ compilation.description|raw }}</td>
            </tr> 
            <tr>
                <th>Genres</th>
                <td>
                    {% if compilation.genres | length > 0 %}
                        <ul>
                            {% for genre in compilation.genres %}
                                <li>
                                    <a href="{{ path('genre_show', {'id': genre.id}) }}">
                                        {{ genre }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>

            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <tr>
                    <th>Research Notes</th>
                    <td>{{ compilation.notes|raw }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Created</th>
                <td>{% if compilation.created %}{{ compilation.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if compilation.updated %}{{ compilation.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>

    {% if compilation.contributions | length > 0 %}    
        <h2>Contributors</h2>
        <ul>
            {% for contribution in compilation.contributions %}
                <li>
                    {% if contribution.role.name != 'author' %}
                        <i>{{ contribution.role }}</i>, 
                    {% endif %}
                    {% embed 'AppBundle:Person:partial/link.html.twig' with {'person': contribution.person} %}
                    {% endembed %}
                </li>
            {% endfor %} 
        </ul>
    {% endif %}

    {% include 'NinesFeedbackBundle:Comment:comment-interface.html.twig' with { 'entity': compilation } %}				

{% endblock %}
