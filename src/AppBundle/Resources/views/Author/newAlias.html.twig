{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alias Creation</h1>
    <p>Use the form below to add an alias for {{ author.fullname }} ({{ author.birthDate }}-{{author.deathDate}}).</p>
    <p>Current aliases: {{ author.aliases|join(',')}}</p>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="{{ path('alias_index') }}" class="btn btn-warning">Cancel</a>
            </div>
        </div>
        {{ form_end(form) }}

    {% endblock %}
