{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Author Search</h1>
	{% if authors|length %}
		<p class="count">
			Displaying {{ authors|length }} authors of {{ authors.getTotalItemCount }} total.
		</p>
	{% endif %}
{% endblock %} 

{% block body %}

    <form method="get" action="{{path('admin_author_search')}}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>

            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

	{% if authors|length %}
		<table class="table table-bordered table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th>Fullname</th>
					<th>Aliases</th>
					<th>Birthdate</th>
					<th>Deathdate</th>
				</tr>
			</thead>
			<tbody>
				{% for author in authors %}
					<tr>
						<td>
							<a href="{{ path('admin_author_show', { 'id': author.id }) }}">
								{{ author.fullName }}
							</a>
						</td>
						<td>
							{% for alias in author.aliases %}
								{{ alias }}{% if not loop.last %}, {% endif %}
							{% endfor %}
						</td>
						<td>{{ author.birthDate }}</td>
						<td>{{ author.deathDate }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="navigation">
			{{ knp_pagination_render(authors) }}
		</div>
	{% endif %}

{% endblock %}
