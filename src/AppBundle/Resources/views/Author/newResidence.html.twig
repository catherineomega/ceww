{% extends 'base.html.twig' %}

{% block body %}
    <h1>Residence Creation</h1>
    <p>Use the form below to add a place as a residence for {{ author.fullname }} ({{ author.birthDate }}-{{author.deathDate}}).</p>
    <p>Current residences: {{ author.residences|join(', ')}}</p>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="{{ path('admin_alias_index') }}" class="btn btn-warning">Cancel</a>
            </div>
        </div>
        {{ form_end(form) }}

    {% endblock %}
