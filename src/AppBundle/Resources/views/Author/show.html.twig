{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Author</h1>    
    <p>
        {% if previous %}
            <span class='text-left'>
                Previous author: <a href="{{ path('admin_author_show', {'id': previous.id }) }}">{{ previous.fullname }}</a>
            </span>
        {% endif %}
        {% if next %}
            <span class='text-right'>
            Next author: <a href="{{ path('admin_author_show', {'id': next.id }) }}">{{ next.fullname }}</a>
            <span>
        {% endif %}
    </p>
{% endblock %} 

{% macro pubList(list, pathname) %}
    {% if list|length %}
        <ul>
            {% for p in list %}
                <li>
                    <a href='{{ path(pathname, {'id': p.id }) }}'>
                        {{ p }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}
{% import _self as self %}

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('admin_author_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('admin_author_edit', { 'id': author.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('admin_author_delete', { 'id': author.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Author?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th style='width: 10%'>Field</th>
                <th style='width: 45%'>Value</th>
                <th style='width: 45%'>Original Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Fullname</th>
                <td>{{ author.fullName }}</td>
                <td>{{ author.getOriginal('NAME') }}</td>
            </tr>
            <tr>
                <th>Aliases</th>
                <td>
					{{ self.pubList(author.aliases, 'admin_alias_show') }}
				</td>
                <td>{{ author.getOriginal('ALTERNATIVE NAMES') }}</td>
            </tr>
            <tr>
                <th>Sortablename</th>
                <td>{{ author.sortableName }}</td>
                <td></td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ author.birthDate }}</td>
                <td>{{ author.getOriginal('BIRTH DATE') }}</td>
            </tr>
            <tr>
                <th>Birthplace</th>
                <td>
                    {% if author.birthPlace %}
                        <a href="{{ path('admin_place_show', {'id': author.birthPlace.id}) }}">{{ author.birthPlace }}</a>
                    {% endif %}
                </td>
                <td>{{ author.getOriginal('BIRTH PLACE') }}</td>
            </tr>
            <tr>
                <th>Deathdate</th>
                <td>{{ author.deathDate }}</td>
                <td>{{ author.getOriginal('DEATH DATE') }}</td>
            </tr>
            <tr>
                <th>Deathplace</th>					
                <td>
                    {% if author.deathPlace %}
                        <a href="{{ path('admin_place_show', {'id': author.deathPlace.id}) }}">{{ author.deathPlace }}</a>
                    {% endif %}
                </td>
                <td>{{ author.getOriginal('DEATH PLACE') }}</td>
            </tr>
            <tr>
                <th>Residences</th>
                <td>{{ self.pubList(author.residences, 'admin_place_show') }}</td>
                <td>{{ author.getOriginal('RESIDENCES') }}</td>
            <tr>
                <th>Books</th>
                <td>{{ self.pubList(author.getPublications('Book'), 'admin_publication_show') }}</td>
                <td>{{ author.getOriginal('TITLES PRODUCED') }}</td>
            </tr>
            <tr>
                <th>Anthologies</th>
                <td>{{ self.pubList(author.getPublications('Anthology'), 'admin_publication_show') }}</td>
                <td>{{ author.getOriginal('ANTHOLOGIES CONTRIBUTED TO') }}</td>
            </tr>
            <tr>
                <th>Periodicals</th>
                <td>{{ self.pubList(author.getPublications('Periodical'), 'admin_publication_show') }}</td>
                <td>{{ author.getOriginal('PERIODICALS CONTRIBUTED TO') }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ author.notes|nl2br }}</td>
                <td></td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if author.created %}{{ author.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td></td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if author.updated %}{{ author.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td></td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ author.status }}</td>
                <td></td>
            </tr>
        </tbody>
    </table>

{% endblock %}
