{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Author</h1>
{% endblock %} 

{% macro pubList(title, list, pathname) %}
	{% if list|length %}
		<h2>{{ title }}</h2>
		<ul>
			{% for p in list %}
				<li>
					<a href='{{ path(pathname, {'id': p.id }) }}'>
						{{ p }}
					</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
{% endmacro %}
{% import _self as self %}

{% block body %}

    <div class="btn-toolbar">
		<div class="btn-group pull-right">
			<a href="{{ path('admin_author_index') }}" class="btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Back
			</a>
			<a href="{{ path('admin_author_edit', { 'id': author.id }) }}" class="btn btn-default">
				<span class='glyphicon glyphicon-edit'></span> Edit
			</a>
			<a href="{{ path('admin_author_delete', { 'id': author.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Author?">
				<span class='glyphicon glyphicon-remove'></span> Delete
			</a>
		</div>
	</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Fullname</th>
				<td>{{ author.fullName }}</td>
            </tr>
			<tr>
				<th>Aliases</th>
				<td>
					{% if author.aliases|length %}
						<ul>
							{% for alias in author.aliases %}
								<li>
									<a href="{{ path('admin_alias_show', {'id': alias.id}) }}">
										{{ alias }}
									</a>
								</li>
							{% endfor %}
						</ul>
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Sortablename</th>
				<td>{{ author.sortableName }}</td>
			</tr>
			<tr>
				<th>Birthdate</th>
				<td>{{ author.birthDate }}</td>
			</tr>
			<tr>
				<th>Birthplace</th>
				<td>
					{% if author.birthPlace %}
						<a href="{{ path('admin_place_show', {'id': author.birthPlace.id}) }}">{{ author.birthPlace }}</a>
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Deathdate</th>
				<td>{{ author.deathDate }}</td>
			</tr>
			<tr>
				<th>Deathplace</th>					
				<td>
					{% if author.deathPlace %}
						<a href="{{ path('admin_place_show', {'id': author.deathPlace.id}) }}">{{ author.deathPlace }}</a>
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Notes</th>
				<td>{{ author.notes|nl2br }}</td>
			</tr>
			<tr>
				<th>Created</th>
				<td>{% if author.created %}{{ author.created|date('Y-m-d H:i:s') }}{% endif %}</td>
			</tr>
			<tr>
				<th>Updated</th>
				<td>{% if author.updated %}{{ author.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
			</tr>
		</tbody>
	</table>

	
	{{ self.pubList('Residences', author.residences, 'admin_place_show') }}
	{{ self.pubList('Publications', author.getPublications('Book'), 'admin_publication_show') }}
	{{ self.pubList('Anthologies', author.getPublications('Anthology'), 'admin_publication_show') }}
	{{ self.pubList('Periodicals', author.getPublications('Periodical'), 'admin_publication_show') }}
	
{% endblock %}
