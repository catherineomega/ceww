<ul>
    {% for publication in publications %}
        {% set author = publication.firstAuthor() %}
        <li>
            {% spaceless %}
                {% if author is not null %}
                    {% embed 'AppBundle:person:partial/link.html.twig' with {'person': author} %}
                    {% endembed %},
                {% endif %}
                {% embed 'AppBundle:publication:partial/link.html.twig' with {'publication': publication} %}
                    {% block callback %}
                        <i>{{ publication.title }}</i>
                    {% endblock %}
                {% endembed %}
                {%- if publication.dateYear -%}
                    , {{ publication.dateYear }}
                {% endif %}
            {% endspaceless %}
        </li>
    {% endfor %} 
</ul>
