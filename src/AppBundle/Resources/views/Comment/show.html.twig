{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Comment</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('comment_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('comment_delete', { 'id': comment.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Comment?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Fullname</th>
            <td>{{ comment.fullname }}</td>
            </tr>
            <tr>
                <th>Email</th>
            <td>{{ comment.email }}</td>
            </tr>
            <tr>
                <th>Url</th>
            <td>{{ comment.url }}</td>
            </tr>
            <tr>
                <th>Content</th>
            <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Status</th>
            <td>{{ comment.status }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
