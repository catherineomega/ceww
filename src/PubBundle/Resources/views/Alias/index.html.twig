{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Alias List</h1>
    <p class="count">
        Displaying {{ aliases|length }} aliases of {{ aliases.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

	<div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('alias_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Maiden</th>
				<th>Authors</th>
			</tr>
        </thead>
        <tbody>
			{% for alias in aliases %}
				<tr>
					<td>
						<a href="{{ path('alias_show', { 'id': alias.id }) }}">
							{{ alias.name }}
						</a>
					</td>
					<td>{% if alias.maiden %}Yes{% else %}No{% endif %}</td>
					<td>{{ alias.authors|length }}</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(aliases) }}
    </div>

{% endblock %}
