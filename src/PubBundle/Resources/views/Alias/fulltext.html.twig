{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Alias Search</h1>
	{% if aliases|length %}
		<p class="count">
			Displaying {{ aliases|length }} aliases of {{ aliases.getTotalItemCount }} total.
		</p>
	{% endif %}
{% endblock %} 

{% block body %}

    <form method="get" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

	{% if aliases|length %}
		<table class="table table-bordered table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Maiden</th>
					<th>Description</th>
					<th>Created</th>
					<th>Updated</th>         
				</tr>
			</thead>
			<tbody>
				{% for result in aliases %}
                    {% set alias = result[0] %}
					<tr>
						<td>
							<a href="{{ path('alias_show', { 'id': alias.id }) }}">
								{{ alias.name }}
							</a>
						</td>
						<td>{% if alias.maiden %}Yes{% else %}No{% endif %}</td>
						<td>{{ alias.description }}</td>
						<td>{% if alias.created %}{{ alias.created|date('Y-m-d H:i:s') }}{% endif %}</td>
						<td>{% if alias.updated %}{{ alias.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="navigation">
			{{ knp_pagination_render(aliases) }}
		</div>
	{% endif %}

{% endblock %}
