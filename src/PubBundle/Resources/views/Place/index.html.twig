{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Place List</h1>
    <p class="count">
        Displaying {{ places|length }} places of {{ places.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('admin_place_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('admin_place_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Alternatenames</th>
                <th>Countryname</th>
                <th>Adminnames</th>
			</tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>
                    <a href="{{ path('admin_place_show', { 'id': place.id }) }}">
                        {{ place.name }}
                    </a>
                </td>
                <td>{% if place.alternateNames %}{{ place.alternateNames|join(', ') }}{% endif %}</td>
                <td>{{ place.countryName }}</td>
                <td>{% if place.adminNames %}{{ place.adminNames|join(', ') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(places) }}
    </div>

{% endblock %}
